# Pump Monitoring Project Configuration
# Copy this file to .env and adjust the values as needed

# Database Configuration
# ------------------------
DB_HOST=pump-monitoring-timescaledb  # Hostname of the database
DB_PORT=5432                          # Database port
DB_NAME=postgres                      # Database name
DB_USER=postgres                      # Database username
DB_PASSWORD=changeme_postgres_password  # CHANGE THIS: Database password

# Pump Specific Configuration
# ---------------------------
PUMP_ID=pump1                         # Unique identifier for the pump
PUMP_REPLICA_COUNT=2                  # Number of pump producer replicas

# Kubernetes Namespace
# -------------------
K8S_NAMESPACE=default                 # Kubernetes namespace to deploy resources

# SSL/TLS Configuration
# --------------------
SSL_CA_FILE=/etc/certificate/ca.crt       # Path to CA certificate
SSL_CERT_FILE=/etc/certificate/tls.crt    # Path to TLS certificate
SSL_KEY_FILE=/etc/certificate/tls.key     # Path to TLS private key

# Monitoring Configuration
# ----------------------
PROMETHEUS_PORT=8000                  # Port for Prometheus metrics
FLASK_PORT=8080                       # Port for Flask application

# TimescaleDB Specific Settings
# ----------------------------
TIMESCALEDB_IMAGE_TAG=pg14-latest     # TimescaleDB image version
TIMESCALEDB_CONNECTIONS_MAX=100       # Maximum database connections
TIMESCALEDB_SHARED_BUFFERS=128MB      # Shared memory buffers
TIMESCALEDB_PERSISTENCE_SIZE=1Gi      # Persistent volume size

# Credential Management
# -------------------
CREDENTIALS_SECRET_NAME=pump-monitoring-credentials  # Kubernetes secret name for credentials
PATRONI_SUPERUSER_PASSWORD=changeme_superuser_password  # CHANGE THIS: Superuser password
REPLICATION_PASSWORD=changeme_replication_password     # CHANGE THIS: Replication user password
ADMIN_PASSWORD=changeme_admin_password                 # CHANGE THIS: Admin password

# Grafana Configuration
# -------------------
GRAFANA_ADMIN_PASSWORD=changeme_grafana_admin  # CHANGE THIS: Grafana admin password
GRAFANA_PERSISTENCE_SIZE=1Gi                  # Grafana persistent volume size

# Resource Limits for Producer
# --------------------------
PRODUCER_CPU_LIMIT=200m        # Maximum CPU for producer
PRODUCER_CPU_REQUEST=100m      # Requested CPU for producer
PRODUCER_MEMORY_LIMIT=256Mi    # Maximum memory for producer
PRODUCER_MEMORY_REQUEST=128Mi  # Requested memory for producer

# Resource Limits for TimescaleDB
# -----------------------------
TIMESCALEDB_CPU_LIMIT=500m     # Maximum CPU for TimescaleDB
TIMESCALEDB_CPU_REQUEST=250m   # Requested CPU for TimescaleDB
TIMESCALEDB_MEMORY_LIMIT=512Mi # Maximum memory for TimescaleDB
TIMESCALEDB_MEMORY_REQUEST=256Mi  # Requested memory for TimescaleDB

# Retention and Backup
# -------------------
DATA_RETENTION_DAYS=30         # Number of days to retain monitoring data
BACKUP_ENABLED=false           # Enable/disable database backups

# Development Flags
# ----------------
DEBUG=false                    # Enable debug mode
LOG_LEVEL=INFO                 # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)

# External Integrations (Optional)
# -------------------------------
# EXTERNAL_MONITORING_ENDPOINT=https://example.com/monitoring
# ALERT_EMAIL=admin@example.com